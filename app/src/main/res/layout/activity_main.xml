<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fikri6998.fikrialfitrarahadi_1202150086_studycase4.MainActivity">


    <Button
        android:id="@+id/btnListNama"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:text="List Nama Mahasiswa" />

    <Button
        android:id="@+id/btnCariGambar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnListNama"
        android:layout_alignStart="@+id/btnListNama"
        android:layout_centerVertical="true"
        android:text="Cari Gambar" />

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:text="Selamat Datang di"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:text="Aplikasi AsyncTask"
        android:textSize="15dp"
        android:textStyle="bold"/>
</RelativeLayout>
